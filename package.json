{
  "name": "universal-react-redux-boilerplate",
  "version": "2.0.0",
  "description": "Step by step creation of a Universal React + Redux Boilerplate",
  "main": "index.js",
  "scripts": {
    "dev": "node ./bin/server",
    "start": "cross-env NODE_ENV=production node ./bin/server",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cross-env NODE_ENV=production babel src --out-dir lib --copy-files",
    "build:client": "cross-env NODE_ENV=production webpack --progress",
    "clean": "rimraf dist lib",
    "check": "npm run lint && npm run test && npm run flow",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --cache .",
    "lint:css": "stylelint src/**/*.scss --syntax scss",
    "test": "cross-env NODE_ENV=test mocha mocha.config.js",
    "flow": "flow",
    "flow:stop": "flow stop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CrocoDillon/universal-react-redux-boilerplate.git"
  },
  "keywords": [
    "isomorphic",
    "universal",
    "react",
    "redux",
    "boilerplate"
  ],
  "author": "Dillon de Voor (http://crocodillon.com)",
  "license": "CC0-1.0",
  "dependencies": {
    "koa": "^2.0.0",
    "koa-static": "^3.0.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "webpack-isomorphic-tools": "^2.2.48"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-es2015-webpack": "^6.4.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-enzyme": "^0.4.2",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "enzyme": "^2.2.0",
    "eslint": "^2.8.0",
    "eslint-plugin-flow-vars": "^0.3.0",
    "eslint-plugin-flowtype": "^2.2.7",
    "eslint-plugin-react": "^5.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.23.1",
    "glob": "^7.0.3",
    "jsdom": "^8.4.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.6.0",
    "postcss-loader": "^0.9.1",
    "react-addons-test-utils": "^15.0.1",
    "react-hot-loader": "^3.0.0-beta.0",
    "rimraf": "^2.5.3",
    "sass-loader": "^3.2.0",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.2.2",
    "webpack": "^2.1.0-beta.5",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
